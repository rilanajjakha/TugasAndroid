<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Warna shadow -->
            <corners android:radius="10dp" />
            <size
                android:width="140dp"
                android:height="140dp" />
        </shape>
    </item>

    <!-- Button layer -->
    <item android:left="2dp" android:right="2dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna button -->
            <corners android:radius="10dp" />
            <size
                android:width="140dp"
                android:height="140dp" />
        </shape>
    </item>

</layer-list>





